/* pages/demo2/demo2.wxss */
.find-top{
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
}
.find-top .find-nav{
  width: 100%;
  height: 88rpx;
  display: flex;
}
.find-top .find-nav .findNav{
  width: 33.3%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  position: relative;
}
.find-top .find-nav .active::after{
  content: "";
  position: absolute;
  width: 38rpx;
  height: 8rpx;
  background: #f00;
  border-radius: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}
.find-container{
  width: 100%;
  background-color: #efefef;
  display: flex;
}
.list-container{
  width: 48%;
  height: 680rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 1% 20rpx;
}
.list-container .list-image{
  width: 342rpx;
  height: 476rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.list-container .list-text{
  font-size: 28rpx;
  text-align: left;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 80rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.list-content{
  width: 100%;
  height: 44rpx;
  margin-top: 30rpx;
}
.list-content .list-left{
  width: 50%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 22rpx;
  float: left;
  /* vertical-align: middle; */
}
.list-content .list-left image{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  vertical-align: middle;
}
.list-content .list-left{
  vertical-align: middle;
}
.list-content .list-right{
  width: 32%;
  height: 44rpx;
  line-height: 44rpx;
  float: right;
  color: #ccc;
}
.list-content .list-right view{
  font-size: 24rpx;
  vertical-align: middle;
  float: left;
}
.list-content .list-right .icon-find-liulan-alt{
  width: 36rpx;
  height: 24rpx;
  vertical-align: middle;
}
.nomore{
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  color: #888;
}