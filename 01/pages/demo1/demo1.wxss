/* pages/demo1/demo1.wxss */
.category-header{
  width: 100%;
  height: 88rpx;
  border-bottom: 2rpx solid #cccccc;
}
.category-header .category-input{
  width: 94%;
  padding: 20rpx 0;
  margin-left: 3%;
  position: relative;
  top: 0;
  left: 0;
  color: #999;
}
.category-header .category-input .category-in{
  width: 90%;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  border-radius: 40rpx;
  padding: 0 0 0 60rpx;
  background-color: rgb(221, 219, 219);
}
.category-header .category-input .icon-search{
  position: absolute;
  top: 34rpx;
  left: 30rpx;
  font-size: 24rpx;
}
.category-container{
  width: 100%;
  /* background: #efefef; */
  display: flex;
}
.category-container .category-left{
  width: 30%;
  height: 100%;
  border-right: 2rpx solid #cccccc;
  text-align: center;
}
.category-container .category-left .left-container{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
}
.category-container .category-left .left-container .active{
  border-left: 2px solid #f00;
  color: #f00;
}
.category-container .category-right{
  padding: 20rpx;
}
.category-container .category-right .scroll-right{
  width: 100%;
  height: 100%;
}
.category-container .category-right .scroll-right .image-top{
  width: 268.2px;
  height: 96px;
}
.category-container .category-right .scroll-right .image-top image{
  width: 268.2px;
  height: 96px;
}