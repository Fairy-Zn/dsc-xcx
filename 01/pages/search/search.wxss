/* pages/search/search.wxss */
.search-header{
  width: 100%;
  height: 88rpx;
  border-bottom: 1px solid #ccc;
}
.search-header .search-nav{
  width: 100%;
  height: 88rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  position: relative;
}
.search-header .search-nav input{
  width: 75%;
  height: 100%;
  line-height: 44rpx;
  padding: 0 0 0 70rpx;
  border: 1px solid #ccc;
  border-radius: 44rpx;
  font-size: 26rpx;
}
.search-header .search-nav .icon-search{
  font-size: 28rpx;
  color: #666;
  position: absolute;
  top: 50%;
  left: 50rpx;
  transform: translateY(-6px);
}
.search-header .search-nav button{
  width: 12%;
  margin-left: 20rpx;
  height: 100%;
  background-color: #f00;
  color: #fff;
  font-size: 24rpx;
  line-height: 44rpx;
  padding: 0;
  text-align: center;
}
.hot-search{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 88rpx;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 20rpx 20rpx 0;
  box-sizing: border-box;
}
.hot-search .hotSearch-title{
  width: 100%;
  height: 20px;
  font-size: 26rpx;
  line-height: 20px;
  margin-bottom: 20rpx;
}
.hot-search .hotSearch-content{
  width: 100%;
  height: 40rpx;
  display: flex;
  font-size: 24rpx;
}
.hot-search .hotSearch-content view{
  width: 17%;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #F1F2F6;
  text-align: center;
  border-radius: 10rpx;
  margin-right: 10rpx;
}