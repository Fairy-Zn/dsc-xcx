.header{
  width: 100%;
  padding-top: 12rpx;
  height: 64rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.header input{
  width: 85%;
  margin-left: 3%;
  border-radius: 30rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.header .icon-search{
  position: absolute;
  top: 26rpx;
  right: 122rpx;
  font-size: 26rpx;
  color: #999;
}
.header .icon-home-xiaoxi{
  position: absolute;
  top: 18rpx;
  right: 30rpx;
  color: #fff;
  font-size: 40rpx;
}
.list{
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 76rpx;
  left: 0;
  z-index: 10;
  display: flex;
}
.list .navScroll{
  width: 78%;
  height: 100%;
  white-space: nowrap;
  margin-left: 3%;
}
.list .navScroll .navContent{
  height: 100%;
  display: flex;
}
.list .navScroll .navContent view{
  float: left;
  width: 56px;
  padding: 0 15px 0 0;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
.list .navScroll .navContent .active{
  font-weight: 700;
}
.list .navScroll .navContent .active::after{
  width: 24rpx;
  height: 12rpx;
  border-radius: 0 0 100% 100%;
  border: 4rpx solid #fff;
