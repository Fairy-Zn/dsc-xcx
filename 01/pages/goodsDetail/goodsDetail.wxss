/* pages/goodsDetail/goodsDetail.wxss */
.goodsNav{
  width: 100%;
  height: 88rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  display: flex;
}
.goodsNav .goodsNav-item{
  width: 25%;
  height: 100%;
  text-align: center;
  font-size: 24rpx;
}
.goodsNav .goodsNav-item.active{
  color: #f00;
}
.goodsDetail-top{
  width: 100%;
  height: 1500rpx;
}
.goodsDetail-top .swiper-container{
  width: 100%;
  height: 750rpx;
}
.goodsDetail-top .swiper-container image{
  width: 100%;
  height: 100%;
}
.goodsPrice{
  width: 100%;
  height: 92rpx;
  padding: 22rpx 22rpx 16rpx 22rpx;
  box-sizing: border-box
}
.goodsPrice .goods-price{
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  color: #f00;
  font-size: 48rpx;
  font-weight: 700;
}
.goodsPrice .goods-price text{
  color: #999;
  font-size: 28rpx;
  text-decoration: line-through;
  font-weight: 400;
}
.goodsVIP{
  width: 100%;
  height: 106rpx;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx;
}
.goodsVIP .goods-vip{
  width: 100%;
  height: 86rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 43rpx;
  background: #f7f8fc;
  font-size: 28rpx;
  display: flex;
}
.goodsVIP .goods-vip image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.goodsVIP .goods-vip .vip-title{
  font-size: 28rpx;
  width: 41%;
  height: 100%;
}
.goodsVIP .goods-vip .vip-price{
  font-weight: 700;
  font-size: 28rpx;
  width: 25%;
}
.goodsVIP .goods-vip .buyVIP{
  width: 63px;
  height: 16px;
  padding: 3px 5px 4px 8px;
  background: #000;
  border-radius: 15px;
  font-size: 24rpx;
  display: flex;
  color: #e3c49e;
  align-items: center;
}
.goodsName{
  width: 100%;
  height: 111.6rpx;
  padding: 0 22rpx 22rpx 22rpx;
  box-sizing: border-box;
}
.goodsName view{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  overflow: hidden;
  line-height: 44.8rpx;
}
.goodsDescripe{
  width: 100%;
  height: 60.4rpx;
  padding: 0 22rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  font-size: 28rpx;
  color: #999;
  justify-content: space-between;
}
/* 详情 服务 */
.goodsServer{
  width: 100%;
  height: 100rpx;
  padding: 26rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  font-size: 24rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
}
.goodsServer .goods-server{
  width:14%;
  height: 100%;
  line-height: 48rpx;
  color: #999;
}
.goodsServer .goods-goods-server-detail{
  width: 70%;
  height: 100%;
  line-height: 48rpx;
}
/* 详情 已选 */
.goodsChose{
  width: 100%;
  height: 100rpx;
  padding: 26rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  font-size: 24rpx;
  border-bottom: 1px solid #efefef;
}
.goodsChose .goodsChose-detail{
  width: 84%;
  height: 100%;
  display: flex;
  align-items: center;
}
.goodsChose .goods-chose{
  width:14%;
  height: 100%;
  line-height: 48rpx;
  color: #999;
}
.goodsChose .goodsChose-detail .goods-chose .goods-chose-num{
  width: 86%;
  height: 100%;
  line-height: 48rpx;
}
/* 蒙版 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,0.7);
  z-index: 99;
}
.screen-wrap{
  width: 100%;
  height: 440rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 199;
}
.screen-wrap .close{
  width: 32rpx;
  height: 32rpx;
  color: #666066;
  position: absolute;
  top: 8rpx;
  right: 4rpx;
  font-size: 24rpx;
}
.screen-wrap .screen-content image{
  width: 92px;
  height: 92px;
  position: absolute;
  top: -40rpx;
  left: 40rpx;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 10rpx #999,-5rpx -5rpx 10rpx #999;
}
.screen-wrap .screen-content .screen-title{
  width: 50%;
  height: 188rpx;
  margin-left: 130px;
  margin-top: 30rpx;
  font-size: 28rpx;
}
.screen-wrap .screen-content .screen-title .title{
  width: 100%;
  height: 90rpx;
  line-height: 45rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 5px;
}
.screen-wrap .screen-content .screen-title .screen-price{
  width: 100%;
  height: 26px;
  line-height: 26px;
  color: #f00;
}
.buy-wrap{
  width: 100%;
  height: 104rpx;
  padding: 11px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}
.buy-wrap .buy-number{
  width: 28%;
  height: 100%;
  display: flex;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.buy-wrap .buy-number view{
  width: 30%;
  height: 100%;
  line-height: 60rpx;
  text-align: center;
}
.buy-wrap .buy-number .num{
  width: 40%;
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
}
.screen-buy{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
}
.screen-buy .buy-btn{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  background: #fba534;
  color: #fff;
}
.screen-buy .buy-cart{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  background: #f92028;
  color: #fff;
}
/* 详情页运费 */
.shipping-address{
  width: 100%;
  height: 174rpx;
  padding: 26rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  border-bottom: 1px solid #efefef;
}
.shipping-address .shipping-add{
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  color: #999;
}
.shipping-address .shipping-freight{
  width: 100%;
  height: 74rpx;
  display: flex;
  align-items: center;
}
.shipping-address .shipping-freight .freight{
  width:14%;
  height: 100%;
  line-height: 74rpx;
  color: #999;
}
.shipping-address .shipping-freight .notSupport{
  color: #f00;
}
/* 详情 详情 */
.goodsDetail-detail{
  width: 100%;
}
.goodsDetail-detail .detail-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #f00;
  font-size: 36rpx;
}
/* 详情 推荐 */
.goodsDetail-recommend{
  background: #efefef;
}
.goodsDetail-recommend .recommend-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #f00;
  font-size: 36rpx;
}
.recommend-list{
  width: 94%;
  margin-left: 3%;
  height: auto;
}
.recommend-list .recommend-item{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.recommend-list image{
  width: 332rpx;
  height: 332rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.recommend-list .recommend-item-title{
  width: 96%;
  margin-left: 2%;
  height: 80rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.recommend-list .recommend-price{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #f00;
  text-align: center;
}
/* 详情 评论 */
.goodsDetail-comment .commment-title{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #f00;
  font-size: 36rpx;
}
/* 底部 */
.goods-footer{
  width: 100%;
  height: 102rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1px solid #efefef;
}
.goods-footer .footer-left{
  width: 50%;
  height: 100%;
  background-color: #fff;
  display: flex;
  font-size: 24rpx;
}
.goods-footer .footer-left .customer-service{
  width: 33.3%;
  height: 100%;
  text-align: center;
  border-right: 1px solid #efefef;
  position: relative;
}
.goods-footer .footer-left .footer-collection{
  width: 33.3%;
  height: 100%;
  text-align: center;
  border-right: 1px solid #efefef;
  position: relative;
}
.goods-footer .footer-left .footer-cart{
  width: 33.3%;
  height: 100%;
  text-align: center;
  position: relative;
}
.goods-footer .footer-left .iconfont{
  width: 40rpx;
  height: 40rpx;
  color: #666;
  position: absolute;
  font-size: 32rpx;
  top: 16rpx;
  left: 50%;
  transform: translateX(-50%);
}
.goods-footer .footer-left .footer-title{
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  width: 100rpx;
  text-align: center;
  transform: translateX(-50%);
}
.goods-footer .footer-left .footer-cart .circle-num{
  position: absolute;
  top: 12rpx;
  right: 18rpx;
  height: 30rpx;
  min-width: 30rpx;
  text-align: center;
  line-height: 30rpx;
  background-color: #f44;
  color: #fff;
  border-radius: 50%;
}
.goods-footer .footer-right{
  width: 50%;
  height: 100%;
  display: flex;
}
.goods-footer .footer-right view{
  width: 50%;
  height: 102rpx;
  line-height: 102rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.goods-footer .footer-right .footer-add{
  background-color: #f44;
  border-top: 1px solid #f44;
}
.goods-footer .footer-right .footer-buy{
  background-color: #ff976a;
  border-top: 1px solid #ff976a;
}
.flag{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
}
@import "/fonts/font_z5lmric8bg/iconfont.wxss"