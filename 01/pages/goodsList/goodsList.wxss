/* pages/goodsList/goodsList.wxss */
.goodsList-header{
  width: 100%;
  height: 88rpx;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  position: relative;
}
.goodsList-input{
  width: 92%;
  height: 100%;
  line-height: 54rpx;
  color: #999;
  font-size: 24rpx;
  border: 2rpx solid #ccc;
  border-radius: 54rpx;
  padding: 0 54rpx;
  box-sizing: border-box;

}
.icon-search{
  font-size: 28rpx;
  color: #999;
  position: absolute;
  top: 28rpx;
  right: 120rpx;
}
.icon-pailie{
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #333;
}
.goodlist-nav{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  background-color: #fff;
}
.goodlist-nav .goodlist-items{
  width: 20%;
  height: 100%;
  line-height: 70rpx;
  display: flex;
  justify-content: center;
}
.goodlist-nav .iconfont{
  font-size: 24rpx;
}